#grep
grepc() {
grep -E "$1|$" $2 | colout "^.*$" Random | less -R
}

#man 
manc() {
man $1 | colout "^.*$" Random | less -R
}

#--help
helpc() {
$1 --help | colout "^.*$" Random | less -R
}


